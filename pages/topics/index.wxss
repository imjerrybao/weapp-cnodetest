.top-bar{
    position: fixed;
    width:100%;
    height:72rpx;
    top:0;
    z-index: 1;
    background-color: #444;
}
.bar-item{
    width:20%;
    display: inline-block;
    text-align: center;
    line-height:72rpx;
    font-size:28rpx;
    color: #80bd01;
    box-sizing: content-box;
}
.bar-item.selected{
    border-bottom: 4rpx solid red;
}
.topic-list{
    margin-top:72rpx;
}
.topic-item{
    padding:20rpx;
    display:flex;
    border-bottom: 1px solid #80bd01;
}
.topic-item .left{
    padding:10rpx 20rpx 10rpx 10rpx;
    display:flex;
    flex-direction: column;
}
.topic-item .avatar{
    width:60rpx;
    height:60rpx;
    border-radius: 50%;
    margin-top:10rpx;
}
.topic-item .right{
    flex:1;
    display:flex;
    flex-direction: column;
}
.topic-item .topic-title{
    overflow:hidden;
    display:flex;
    flex-wrap: nowrap;
    font-size:30rpx;
}
.topic-item .topic-author{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 24rpx;
    margin-top:20rpx;
}
.topic-item .topic-publishtime{
    font-size:24rpx;
    margin-top:20rpx;
    color:#999;
}